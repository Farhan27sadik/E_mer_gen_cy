<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.example.e_mer_gen_cy.call">

    <EditText
        android:id="@+id/edt_cl_number"
        android:layout_marginLeft="15dp"
        android:textColor="@color/White"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="147dp"
        android:inputType="phone"
        android:layout_alignParentLeft="true" />



    <ImageView
        android:id="@+id/image_call"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        android:src="@drawable/call" />


    <ImageView
        android:id="@+id/image_con"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/edt_cl_number"
        android:src="@drawable/contact" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Contacts From Here"
        android:textAllCaps="false"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="20dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/White"
        android:layout_below="@+id/edt_cl_number"
        android:layout_toRightOf="@+id/image_con"
        >

    </TextView>



</RelativeLayout>
